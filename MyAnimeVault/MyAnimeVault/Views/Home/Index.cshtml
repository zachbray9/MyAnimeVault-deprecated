@using MyAnimeVault.Domain.Models
@model List<AnimeListNode>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="anime-list-container">
        <div class="anime-list-title-container">
            <h2 class="anime-list-title">Top Anime Series</h2>
        </div>
        <ul class="anime-list">
            @foreach(var node in Model)
            {
                <li class="anime-card">
                    <a class="anime-link">
                        <img class="anime-poster" src="@node.Anime.Picture.Medium" alt="@node.Anime.Title" height="300" width="225">
                        <p class="anime-title">
                            @if(node.Anime.AlternativeTitles == null)
                                @node.Anime.Title
                            else
                                @node.Anime.AlternativeTitles.en
                        </p>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
